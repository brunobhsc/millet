<p id="notice"><%= notice %></p>

<h1>Investments</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Broker</th>
      <th>Applied at</th>
      <th>Duration</th>
      <th>Rescue at</th>
      <th>Invested amount</th>
      <th>Estimated rescue</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @investments.each do |investment| %>
      <tr>
        <td><%= investment.description %></td>
        <td><%= investment.broker %></td>
        <td><%= investment.applied_at %></td>
        <td><%= investment.duration %></td>
        <td><%= investment.rescue_at %></td>
        <td><%= investment.invested_amount %></td>
        <td><%= investment.estimated_rescue %></td>
        <td><%= link_to 'Show', investment %></td>
        <td><%= link_to 'Edit', edit_investment_path(investment) %></td>
        <td><%= link_to 'Destroy', investment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

